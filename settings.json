  /*
   * TODO-Tree configs
   */
  "todo-tree.tree.scanMode": "workspace only",

  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "ALERT",
    "??",
    "..",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "NOTE"
  ],
  "todo-tree.regex.regex": "((%|#|//|<!--|^\\s*\\*)\\s*($TAGS)|^\\s*- \\[ \\])",

  "todo-tree.highlights.defaultHighlight": {
    "type": "text-and-comment",
    "foreground": "#a72a2a",
    "background": "#ffffff",
    "opacity": 50,
    "iconColour": "#e26212"
  },

