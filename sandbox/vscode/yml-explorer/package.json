{
  "name": "yml-explorer",
  "displayName": "yml_explorer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "my-extension-sidebar-view.refresh",
        "title": "Refresh YAML Tree",
        "icon": "$(refresh)"
      },
      {
        "command": "my-extension-sidebar-view.editValue",
        "title": "Edit Value"
      },
      {
        "command": "my-extension-sidebar-view.setFilter",
        "title": "Filter Configuration Tree",
        "icon": "$(filter)"
      },
      {
        "command": "my-extension-sidebar-view.submitForm",
        "title": "Submit Webview Form Data"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "my-extension-sidebar-view.editValue",
          "when": "viewItem === yamlScalarItem",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "my-extension-sidebar-view.setFilter",
          "group": "navigation@1"
        },
        {
          "command": "my-extension-sidebar-view.refresh",
          "group": "navigation@2"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myExtensionViewContainer",
          "title": "YAML Explorer",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "myExtensionViewContainer": [
        {
          "id": "my-extension-sidebar-view",
          "name": "YAML Configuration Tree",
          "icon": "$(settings-gear)"
        },
        {
          "id": "my-form-view",
          "name": "Settings Form",
          "contextualTitle": "Web Form Input",
          "type": "webview",
          "icon": "$(edit)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
