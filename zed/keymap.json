// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  // run in terminal
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space v": ["task::Spawn", { "task_name": "run in terminal" }],
      "space k s": "zed::OpenKeymap",
      "ctrl-|": "pane::SplitAndMoveRight",
      "alt-|": "pane::JoinIntoNext",
    },
  },
  {
    "context": "(Editor && vim_mode == normal) || Terminal",
    "bindings": {
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-h": "pane::ActivatePreviousItem",
      "ctrl-l": "pane::ActivateNextItem",
      "alt-b": "workspace::ToggleLeftDock",
    },
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space k s": "zed::OpenKeymap",
    },
  },
  // select syntax
  {
    "context": "Editor && vim_mode == visual && !VimWaiting",
    "bindings": {
      "enter": "editor::SelectLargerSyntaxNode",
      "backspace": "editor::SelectSmallerSyntaxNode",
    },
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting",
    "bindings": {
      "space enter": "editor::SelectLargerSyntaxNode",
    },
  },
  // vim normal
  {
    "context": "Editor && vim_mode == normal && !VimWaiting",
    "bindings": {
      "space w": "workspace::Save",
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem",
      "ctrl-alt-h": "pane::SwapItemLeft",
      "ctrl-alt-l": "pane::SwapItemRight",
      "shift-r": "editor::ToggleFold",
      "z m": "editor::FoldAll",
      "z r": "editor::UnfoldAll",
      "z c": "editor::FoldRecursive",
      "z o": "editor::UnfoldRecursive",
      "alt-t": "editor::SelectAll",
    },
  },
  {
    "context": "!Editor",
    "bindings": {
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem",
    },
  },

  // operators
  {
    "context": "Editor && vim_mode == operator && !VimWaiting",
    "bindings": {
      "shift-l": "vim::EndOfLine",
      "shift-h": "vim::FirstNonWhitespace",
    },
  },
  // macros
  {
    "context": "Editor && vim_mode == normal && !VimWaiting",
    "bindings": {
      "shift-q": ["vim::SelectRegister", "q"],
      "shift-w": ["vim::SelectRegister", "w"],
      "shift-e": ["vim::SelectRegister", "e"],
    },
  },
  // visual
  {
    "context": "Editor && vim_mode == visual && !VimWaiting",
    "bindings": {
      "shift-j": "editor::MoveLineDown",
      "shift-k": "editor::MoveLineUp",
      "shift-s": "vim::PushAddSurrounds",
      "shift-r": "editor::ToggleFold",
    },
  },
  // navigate
  {
    "context": "((VimControl && !menu) || (!Editor && !Terminal))",
    "bindings": {
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-h": "workspace::ActivatePaneLeft",
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "alt-x": "pane::CloseActiveItem",
      "alt-b": "workspace::ToggleLeftDock",
    },
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": "vim::PushSneak",
      "space s n": "editor::ConvertToSnakeCase",
    },
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "S": "vim::PushSneakBackward",
    },
  },
  // confirm completion
  {
    "context": "Editor && showing_completions",
    "bindings": {
      "ctrl-y": "editor::ConfirmCompletion",
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-p": null,
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "alt-p": "file_finder::Toggle",
    },
  },
  // run in terminal
  {
    "context": "Workspace",
    "bindings": {},
  },
  {
    "context": "(ProjectPanel && not_editing)",
    "bindings": {
      "a": "project_panel::NewFile",
      "d": "project_panel::Delete",
      "r": "project_panel::Rename",
    },
  },
  {
    "context": "(ProjectPanel && not_editing)",
    "bindings": {
      "o": "project_panel::OpenPermanent",
    },
  },
  {
    "context": "(ProjectPanel && not_editing)",
    "bindings": {
      "s": "workspace::NewFileSplitHorizontal",
    },
  },
]
